<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<model xmlns="http://www.alfresco.org/model/dictionary/1.0" name="hlm:drcdocuments">
    <description>Alfresco Content Model voor Document Registratie Component</description>
    <version>1.0</version>
    <imports>
        <import prefix="d" uri="http://www.alfresco.org/model/dictionary/1.0" />
        <import prefix="cm" uri="http://www.alfresco.org/model/content/1.0" />
    </imports>

    <namespaces>
        <namespace prefix="hlm" uri="http://haarlem.nl/model/1.0" />
        <namespace prefix="tmlo" uri="http://haarlem.nl/tmlo/1.0" />
        <namespace prefix="drc" uri="http://www.egem.nl/king/zsdms" />
    </namespaces>

    <!--  Algemene opmerkingen:
        -   Datums zijn voorlopig als 'd:date' opgenomen en niet als 'd:datetime'.
            Tijdstippen worden dus niet opgeslagen in de gedeclareerde velden.
            De Systeem data (cm:created en cm:modified) zijn wel van het type d:datetime.
        -   De velden cm:title en drc:zaakidentificatie zijn opgenomen in aspecten.
            Een eventuele cmis query die deze properties op wil vragen, moet een join doen met deze aspecten (resp. cm:title en drc:zaakidentificatieAspect).
    -->
    <constraints/>

    <types>
        <type name="drc:zaaktypefolder">
            <title>Zaaktype folder</title>
            <description>Zaaktype folder</description>
            <parent>cm:folder</parent>
            <properties>
                <property name="drc:zaaktype-identificatie">
                    <title>drc - Zaaktype - Identificatie</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:zaaktype-url">
                    <title>drc - Zaaktype - Url</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
            </properties>
        </type>
        <type name="drc:zaakfolder">
            <title>Zaak folder</title>
            <description>Zaakfolder</description>
            <parent>cm:folder</parent>
            <properties>
                <property name="drc:zaak-identificatie">
                    <title>drc - Zaak - Identificatie</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:zaak-url">
                    <title>drc - Zaak - Url</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:zaak-zaaktype_url">
                    <title>drc - Zaak - Zaaktype url</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:zaak-startdatum">
                    <title>drc - Zaak - Startdatum</title>
                    <type>d:date</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:zaak-einddatum">
                    <title>drc - Zaak - Einddatum</title>
                    <type>d:date</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:zaak-deelzakenindicatie">
                    <title>drc - Zaak - Indicatie deelzaken</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="drc:zaak-registratiedatum">
                    <title>drc - Zaak - Registratiedatum</title>
                    <type>d:date</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:zaak-bronorganisatie">
                    <title>drc - Zaak - bronorganisatie</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
            </properties>
            <mandatory-aspects>
                <aspect>drc:zaakidentificatieAspect</aspect>
            </mandatory-aspects>
        </type>
        <type name="drc:document">
            <title>Document</title>
            <description>Document</description>
            <parent>cm:content</parent>

            <properties>
                <!-- document titel (cm:title) is een bestaand veld uit het alfrescomodel.
                     Het is impliciet beschikbaar gemaakt door het aspect cm:titled toe te voegen aan de lijst met verplichte aspecten van het type drc:document-->
                <!-- de bestandsnaam komt overeen met het systeemveld cm:name -->
                <property name="drc:identificatie">
                    <title>DRC - Identificatie</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="drc:bronorganisatie">
                    <title>DRC - Bronorganisatie</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:creatiedatum">
                    <title>DRC - Creatie datum</title>
                    <type>d:date</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:vertrouwelijkaanduiding">
                    <title>DRC - Vertrouwelijkaanduiding</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:auteur">
                    <title>DRC - Auteur</title>
                    <type>d:text</type>
                </property>
                <property name="drc:status">
                    <title>DRC - Status</title>
                    <type>d:text</type>
                </property>
                <property name="drc:beschrijving">
                    <title>DRC - Beschrijving</title>
                    <type>d:text</type>
                </property>
                <property name="drc:ontvangstdatum">
                    <title>DRC - Ontvangst datum</title>
                    <type>d:date</type>
                </property>
                <property name="drc:verzenddatum">
                    <title>DRC - Verzend datum</title>
                    <type>d:date</type>
                </property>
                <property name="drc:indicatie_gebruiksrecht">
                    <title>DRC - Indicatie gebruiksrecht</title>
                    <type>d:text</type>
                </property>
                <property name="drc:ondertekening_soort">
                    <title>DRC - Ondertekening soort</title>
                    <type>d:text</type>
                </property>
                <property name="drc:ondertekening_datum">
                    <title>DRC - Ondertekening datum</title>
                    <type>d:date</type>
                </property>
                <property name="drc:informatieobjecttype">
                    <title>DRC - Informatie object type</title>
                    <type>d:text</type>
                </property>
                <property name="drc:formaat">
                    <title>DRC - Formaat</title>
                    <type>d:text</type>
                </property>
                <property name="drc:taal">
                    <title>DRC - Taal</title>
                    <type>d:text</type>
                </property>
                <property name="drc:bestandsnaam">
                    <title>DRC - Bestandsnaam</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:link">
                    <title>DRC - link</title>
                    <type>d:text</type>
                </property>
                <property name="drc:integriteit_algoritme">
                    <title>DRC - integriteit_algoritme</title>
                    <type>d:text</type>
                </property>
                <property name="drc:integriteit_waarde">
                    <title>DRC - integriteit_waarde</title>
                    <type>d:text</type>
                </property>
                <property name="drc:integriteit_datum">
                    <title>DRC - integriteit_datum</title>
                    <type>d:date</type>
                </property>
                <property name="drc:oio_zaak_url">
                    <title>DRC - oio zaak_url</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:oio_object_type">
                    <title>DRC - oio object_type</title>
                    <type>d:text</type>
                </property>
                <property name="drc:oio_aard_relatie_weergave">
                    <title>DRC - oio aard_relatie_weergave</title>
                    <type>d:text</type>
                </property>
                <property name="drc:oio_titel">
                    <title>DRC - oio titel</title>
                    <type>d:text</type>
                </property>
                <property name="drc:oio_beschrijving">
                    <title>DRC - oio beschrijving</title>
                    <type>d:text</type>
                </property>
                <property name="drc:oio_registratiedatum">
                    <title>DRC - oio registratiedatum</title>
                    <type>d:date</type>
                </property>
            </properties>
            <!-- Identificatiekenmerk (noderef) word door alfresco automatisch gegenereerd en staat in  het veld sys:node-uuid
                 In combinatie met de prefix 'workspace://SpacesStore/' levert dit de zg. nodeRef -->
            <!-- tmlo:datumAanmaak word door alfresco bijgehouden in het veld cm:created  -->
            <mandatory-aspects>
                <aspect>cm:titled</aspect>
            </mandatory-aspects>
        </type>
    </types>

    <aspects>
        <aspect name="drc:zaakidentificatieAspect">
            <title>Zaakidentificatie Aspect</title>
            <description>Zaakidentificatie Aspect</description>
            <properties>
                <property name="drc:zaakidentificatie">
                    <title>Zaak identificatie</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
            </properties>
        </aspect>
    </aspects>
</model>
